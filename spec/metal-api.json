  "metal.Device": {
   "description": "A device representing a bare metal machine.",
   "required": [
    "id",
    "name",
    "project",
    "facility",
    "image",
    "size",
    "hardware",
    "ip",
    "hostname",
    "ssh_pub_key"
   ],
   "properties": {
    "changed": {
     "description": "the last changed timestamp",
     "type": "string",
     "format": "date-time",
     "readOnly": true
    },
    "created": {
     "description": "the creation time of this machine",
     "type": "string",
     "format": "date-time",
     "readOnly": true
    },
    "description": {
     "description": "a description for this machine",
     "type": "string"
    },
    "facility": {
     "description": "the facility assigned to this device",
     "$ref": "#/definitions/metal.Facility",
     "readOnly": true
    },
    "hardware": {
     "description": "the hardware of this device",
     "$ref": "#/definitions/metal.DeviceHardware"
    },
    "hostname": {
     "description": "the hostname of the device",
     "type": "string"
    },
    "id": {
